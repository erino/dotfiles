#!/bin/sh

git submodule init
git submodule update

# Symlink dot files
ln -s vimrc ~/.vimrc
ln -s tmux.conf ~/.tmux.conf

# Symlink vi to vim
ln -s /usr/local/bin/vim /usr/local/bin/vi

# Compile the Command-T extension
cd vim/bundle/Command-T/ruby/command-t
ruby extconf.rb
make

# TODO not sure how to get back to repo root
